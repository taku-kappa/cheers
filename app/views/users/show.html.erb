<h1>Users#show</h1>

<!--ユーザー情報部分-->
<div>
  <%= image_tag @user.get_profile_image, :size => '100x100' %>
</div>
<div>
  <%= @user.name %>
  <% if @user == current_user %>
    <%= link_to "ユーザー編集", edit_user_path(@user.id) %>
  <% end %>
</div>
<div>投稿：<%= @posts.count %></div>

<%= link_to "新規投稿", new_post_path %>


<!--投稿一覧部分-->
<% @posts.each do |post| %>
  <h3>
    <%= link_to post_path(post.id) do %>
      <%= post.shop_name %>
    <% end %>
  </h3>
  <table>
    <tr>
      <th>メニュー</th>
      <th>値段</th>
      <th>特徴</th>
    </tr>

    <tr>
      <td>
        <div>
          <%= post.menu1_name %>
        </div>
        <div>
          <%= post.menu2_name %>
        </div>
        <div>
          <%= post.menu3_name %>
        </div>
      </td>

      <td>
        <div>
          <%= post.menu1_price %>
        </div>
        <div>
          <%= post.menu2_price %>
        </div>
        <div>
          <%= post.menu3_price %>
        </div>
      </td>

      <td>
        <div>
          <%= post.menu1_description %>
        </div>
        <div>
          <%= post.menu2_description %>
        </div>
        <div>
          <%= post.menu3_description %>
        </div>
      </td>
    </tr>
  </table>

<% end %>


<!--ページネーションの記述-->
<%= paginate @posts %>

