<h1 class="text-center my-4">ユーザー編集</h1>

<!-- エラーメッセージ -->
<% if @user.errors.any? %>
  <div class="container mt-3 alert alert-danger">
    <h4><%= @user.errors.count %> 件のエラーにより保存できませんでした:</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @user, url: user_path(@user.id), method: :patch, local: true, class: 'form' do |f| %>
        <div class="form-group mb-3">
          <label for="name">ユーザー名</label>
          <%= f.text_field :name, class: "form-control", id: "name" %>
        </div>

        <div class="form-group mb-3">
          <label for="profile_image">画像</label><br>
          <%= image_tag @user.get_profile_image, :size => '100x100', class: "rounded" %>
          <p class="mt-2"><%= f.file_field :profile_image, class: "form-control-file", id: "profile_image" %></p>
        </div>

        <!--<div class="form-group mb-3">-->
        <!--  <label for="password">パスワード</label>-->
        <!--  <%#= f.text_field :password, class: "form-control", id: "password" %> -->
        <!--</div>-->

        <!--<div class="form-group mb-3">-->
        <!--  <label for="email">メールアドレス</label>-->
        <!--  <%#= f.text_field :email, class: "form-control", id: "email" %> -->
        <!--</div>-->

        <div class="form-group text-center">
          <%= f.submit "変更保存", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%#= button_to "アカウント削除", user_path(@user.id), method: :delete, class: "btn btn-danger mt-3" %>