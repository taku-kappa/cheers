<h1>Posts#index</h1>

<!--検索フォームのスペース-->
<%= form_with(url: search_posts_path, method: :get) do |f| %>
  <%= f.search_field :keyword, placeholder: "検索ワードを入力" %>
  <%= f.submit "検索" %>
<% end %>


<!--地図機能-->
<div id="map"></div>
<%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>


<!--新規投稿一覧のスペース-->
<h2>新規投稿一覧</h2>



<!--ユーザー情報を表示-->


<table class="table">
  <thead>
    <tr>
      <th>店名</th>
      <th>イメジ</th>
      <th>投稿者</th>
    </tr>
  </thead>
  
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.shop_name, post_path(post.id) %></td>
        <td>
          <%= link_to post_path(post) do %>
            <%= image_tag(post.image1.attached? ? post.image1 : 'default-image.jpg', size: "80x80") %>
          <% end %>
        </td>
        <td><%= link_to post.user.name, user_path(post.user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!--ページネーションの記述-->
<%= paginate @posts %>


